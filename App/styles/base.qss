QWidget {
    background-color: #f5f5f5;
    font-family: Arial, sans-serif;
}

QPushButton {
    font-size: 18px;
    padding: 10px;
    margin:5px;
    background-color: grey;
    color: white;
    border: none;
    border-radius: 5px;
    min-width: 150px;
}

QPushButton:hover {
    background-color: #64625f;
}

QPushButton:pressed {
    background-color: #6e6e6e;
}